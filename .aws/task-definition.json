{
    "family": "youtofy-authentication-task",
    "requiresCompatibilities": ["FARGATE"],
    "networkMode": "awsvpc",
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::819080194872:role/youtofy-ecs-task-execution-role",
    "taskRoleArn": "arn:aws:iam::819080194872:role/youtofy-ecs-task-execution-role",
    "containerDefinitions": [
        {
            "name": "youtofy-authentication-container",
            "image": "PLACEHOLDER_IMAGE",
            "essential": true,
            "command": ["./YouToFy-Authentication"],
            "portMappings": [
                {
                    "containerPort": 3333,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "POSTGRES_DB",
                    "value": "PLACEHOLDER_POSTGRES_DB"
                },
                {
                    "name": "POSTGRES_USER",
                    "value": "PLACEHOLDER_POSTGRES_USER"
                },
                {
                    "name": "POSTGRES_PASSWORD",
                    "value": "PLACEHOLDER_POSTGRES_PASSWORD"
                },
                {
                    "name": "POSTGRES_PORT",
                    "value": "PLACEHOLDER_POSTGRES_PORT"
                },
                {
                    "name": "PGADMIN_DEFAULT_EMAIL",
                    "value": "PLACEHOLDER_PGADMIN_DEFAULT_EMAIL"
                },
                {
                    "name": "PGADMIN_DEFAULT_PASSWORD",
                    "value": "PLACEHOLDER_PGADMIN_DEFAULT_PASSWORD"
                },
                {
                    "name": "PGADMIN_PORT",
                    "value": "PLACEHOLDER_PGADMIN_PORT"
                },
                {
                    "name": "BACKEND_DATABASE_URL",
                    "value": "PLACEHOLDER_BACKEND_DATABASE_URL"
                },
                {
                    "name": "AUTHENTICATION_PORT",
                    "value": "PLACEHOLDER_AUTHENTICATION_PORT"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/youtofy",
                    "awslogs-region": "us-east-2",
                    "awslogs-stream-prefix": "authentication"
                }
            }
        }
    ]
}