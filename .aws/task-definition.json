{
    "family": "YouToFyAuthenticationFamily",
    "containerDefinitions": [
        {
            "name": "YouToFyAuthentication",
            "image": "${{ secrets.DOCKER_HUB_USERNAME }}/youtofy-authentication:latest",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 3333,
                    "hostPort": 0,
                    "protocol": "tcp"
                }
            ],
            "memory": 512,
            "cpu": 256,
            "environment": [
                {
                    "name": "POSTGRES_DB",
                    "value": "${{ secrets.POSTGRES_DB }}"
                },
                {
                    "name": "POSTGRES_USER",
                    "value": "${{ secrets.POSTGRES_USER }}"
                },
                {
                    "name": "POSTGRES_PASSWORD",
                    "value": "${{ secrets.POSTGRES_PASSWORD }}"
                },
                {
                    "name": "POSTGRES_PORT",
                    "value": "${{ secrets.POSTGRES_PORT }}"
                },
                {
                    "name": "PGADMIN_DEFAULT_EMAIL",
                    "value": "${{ secrets.PGADMIN_DEFAULT_EMAIL }}"
                },
                {
                    "name": "PGADMIN_DEFAULT_PASSWORD",
                    "value": "${{ secrets.PGADMIN_DEFAULT_PASSWORD }}"
                },
                {
                    "name": "PGADMIN_PORT",
                    "value": "${{ secrets.PGADMIN_PORT }}"
                },
                {
                    "name": "BACKEND_DATABASE_URL",
                    "value": "${{ secrets.BACKEND_DATABASE_URL }}"
                },
                {
                    "name": "BACKEND_PORT",
                    "value": "${{ secrets.BACKEND_PORT }}"
                }
            ]
        }
    ]
}